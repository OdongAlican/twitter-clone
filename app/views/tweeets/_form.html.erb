<%= simple_form_for(@tweeet) do |f| %>
<%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :tweeet, label: "Tweet About it", input_html: { class: "textarea" }, wrapper: false, 
        label_html: {class: "label"}, placeholder: "Compose a new Tweet ...." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>